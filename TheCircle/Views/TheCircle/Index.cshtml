<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--Los que se usan en las demas-->
    <link href="http://thenextheme.net/wiseboard/dist/main/css/main.min.css" rel="stylesheet" type="text/css" />
    <!--Aqui acaban-->
    <title>TheCircle : Login</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <!-- Login css -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/css/select2.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: url(/images/help-kids-have-a-childhood.jpg) fixed no-repeat 50% 70%;
            background-size: cover
        }

        .login-wrapper {
            width: 100%;
            float: right;
            margin-top: 170px;
            margin-bottom: 120px;
            position: relative;
            max-width: 360px

        }
        .btn-info {
            color: #fff;
            border-color: #17c092;
            background-color: #28d1a3;
        }
            .btn-info:hover {
                color: #fff;
                background-color: #28d1a3;
                border-color: #17c092;
            }
    </style>
</head>
<body class="page-dashboard" ng-app="appLogin" >
    <div class="container">
        <div class="login-wrapper">
            <div class="text-center">

            </div><!-- /.logo-wrapper -->

            <div ng-controller="login" class="panel" style="border-radius: 6px;background-color: rgba(0,0, 0, 0.55);">
                <div class="panel-body" style="border-radius: 6px;background-color: rgba(144, 31, 97, 0.55);">
                    <form ng-submit="login(form)">
                        <h3 style="margin-bottom: 30px;color:white;text-align:center">Autenticación - TheCircle</h3>
                        <div class="form-group">
                            <div class="browser-default">
                                <input ng-model="form.cedula" type="number" required class="form-control rounded" placeholder="Ingrese el Usuario/Cédula">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="browser-default">
                                <input ng-model="form.clave" type="password" required class="form-control rounded" placeholder="Ingrese la Contraseña">
                            </div>
                        </div>
                        <div class="form-group">
                            <select ng-model="form.localidad" class="form-control" required style="width: 328px;">
                                <option style="display:none;" selected disabled value="">Seleccione el centro comunitario</option>
                                <option value="{{lo.id}}" ng-repeat="lo in localidades">{{lo.nombre}}</option>
                            </select>             
                        </div><!-- /.form-group -->
                        <button type="submit" class="btn btn-info col-sm-12 rounded" style="width:100%;">Acceder</button>
                    </form>
                </div>
                <div class="panel-footer" style="border-radius: 6px;background-color: rgba(144, 31, 97, 0.85);text-decoration:none;border-color:rgba(0,0,0,0.55);">
                   <a href="#" data-toggle="modal" data-target="#myModal" style="color:#fff;text-decoration: none; font-size:16px;margin-left:33%;" >Crear una cuenta</a>
                </div>
                
            </div>
            
        </div>


        <!--Modal Item receta-->
        <div id="myModal" class="modal fade" style="margin-top:10%;">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Crear una Cuenta</h5>
                    </div>
                    <div class="panel-body" style=" padding-top: 5px;">
                        <table class="table table-striped" style="text-align:center;">

                            <tbody style="text-align:left;">
                                <tr>
                                    <td>C&eacute;dula de Identidad: </td>
                                    <td><input type="text" class="form-control rounded"/></td>
                                </tr>
                                <tr>
                                    <td>Correo Institucional: </td>
                                    <td><input type="text" class="form-control rounded" /></td>
                                </tr>
                            </tbody>
                        </table>

                    </div><!--  -->
                    <div class="text-center" style="margin-bottom: 5px;">
                        <button type="submit" class="btn btn-info"><span class="glyphicon glyphicon-envelope"></span> Enviar</button>
                        <button type="button" class="btn btn-default">Cancelar</button>
                    </div><!-- /.form-group -->
                </div>
            </div>
        </div>
        <!--Aqui Termina el modal para el item de remision-->


    </div><!-- /.container -->
    <!-- scritpts -->
    <script>
        
    </script>
    <script src="~/scripts/vendor/angular.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
    <script>
            angular.module("appLogin", [])
                .controller('login', ["$http", "$scope", "$location", function ($http, $scope, $location) {

                    $(".myselect").select2();

                    $scope.localidades = [
                        { id: "OC", nombre: "Oficina central" },
                        { id: "CC0", nombre: "Centro Comunitario 0 - Durán" },
                        { id: "CC2", nombre: "Centro Comunitario 2 - Phelan" },
                        { id: "CC3", nombre: "Centro Comunitario 3 - BUDS" },
                        { id: "CC5", nombre: "Centro Comunitario 5 - Flor de Bastión" },
                        { id: "CC6", nombre: "Centro Comunitario 6 - Estrella de Belén" },
                        { id: "HEE", nombre: "Centro Hacia El Empleo" }
                    ]


                    $scope.login = function (data) {

                        console.log(data);
                        $http.post("/login", data).then(function success(res) {
                            console.log(res);
                            //window.location.replace(res.data.path);
                        }, function error(err) {
                            console.log("error", err);
                        })
                    }

                }]);
    </script>
</body>
</html>